{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div style="" class="container">
    <div style="border:0.5px solid lightgrey; margin:10% auto; width:60%; 
    padding:25px; border-radius:10px;text-align:center ">
    <form action="{{ path('app_login') }}" method="post">
    <div class="form-div">
        <div class="form-group">
       
        <input type="text" class="form-control"id="username" name="_username" value="{{ last_username }}" placeholder="password"/>
        </div>
        <div class="form-group">
   
        <input type="password" class="form-control" id="password" name="_password" placeholder="password"/>
        </div>
        {# If you want to control the URL the user is redirected to on success
